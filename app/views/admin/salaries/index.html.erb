<div class="min-h-screen bg-gray-100 py-12 px-4">
  <div class="max-w-5xl mx-auto bg-white p-6 shadow rounded">
    <h2 class="text-2xl font-bold mb-6 text-center">Daftar Gaji</h2>
    <!-- Filter Bulan -->
    <div class="mb-4">
    <%= form_with url: admin_salaries_path, method: :get, local: true do %>
        <label for="month" class="mr-2 font-semibold">Pilih Bulan:</label>
        <%= month_field_tag :month, @month.strftime('%Y-%m'), onchange: "this.form.submit()", class: "border rounded px-2 py-1" %>
    <% end %>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Nama</th>
            <th class="px-4 py-3 text-sm font-medium text-gray-700">Tipe</th>
            <th class="px-4 py-3 text-sm font-medium text-gray-700">Nominal</th>
            <th class="px-4 py-3 text-sm font-medium text-gray-700">Bulan</th>
            <th class="px-4 py-3 text-sm font-medium text-gray-700">Status</th>
            <th class="px-4 py-3 text-sm font-medium text-gray-700">Aksi</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @salaries.each do |salary| %>
            <tr>
              <td class="px-4 py-2"><%= salary.user.name %></td>
              <td class="px-4 py-2 capitalize"><%= salary.salary_type.humanize %></td>
              <td class="px-4 py-2"><%= number_to_currency(salary.total_amount, unit: "Rp ") %></td>
              <td class="px-4 py-2"><%= "#{Date::MONTHNAMES[salary.month]} #{salary.year}" %></td>
              <td class="px-4 py-2">
                <span class="inline-block px-2 py-1 rounded bg-gray-200 text-sm"><%= salary.status.humanize %></span>
              </td>
              <td class="px-4 py-2 space-x-2">
                <%= link_to "Detail", admin_salary_path(salary), class: "text-blue-600 hover:underline text-sm" %>
                <%= link_to "Edit", edit_admin_salary_path(salary), class: "text-green-600 hover:underline text-sm" %>
                <%= button_to "Hapus", admin_salary_path(salary), method: :delete, data: { confirm: "Yakin hapus?" }, class: "text-red-600 hover:underline text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "Buat Gaji Baru", new_admin_salary_path, class: "w-full bg-[#012f2f] hover:bg-[#024646] text-white font-semibold p-2 rounded-lg transition-colors duration-200" %>
    </div>
  </div>
</div>
