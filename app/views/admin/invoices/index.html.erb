<% content_for :title, "Daftar Invoice" %>

<div class="max-w-6xl mx-auto mt-8 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Daftar Invoice</h1>
    <%= link_to "Tambah Invoice", new_admin_invoice_path, class: "bg-[#012f2f] hover:bg-[#024646] text-white font-semibold p-2 rounded-lg transition-colors duration-200" %>
  </div>

  <% if @invoices.empty? %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded">
      Tidak ada data invoice.
    </div>
  <% else %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-200 shadow-sm rounded-lg">
        <thead class="bg-gray-100 text-left text-gray-600 uppercase text-sm">
          <tr>
            <th class="px-6 py-3 border-b">Tanggal</th>
            <th class="px-6 py-3 border-b">Siswa</th>
            <th class="px-6 py-3 border-b">Jumlah</th>
            <th class="px-6 py-3 border-b">Status</th>
            <th class="px-6 py-3 border-b">Aksi</th>
          </tr>
        </thead>
        <tbody class="text-gray-700 divide-y divide-gray-200">
          <% @invoices.each do |invoice| %>
            <tr>
              <td class="px-6 py-4"><%= l invoice.created_at.to_date, format: :long %></td>
              <td class="px-6 py-4"><%= invoice.student.name %></td>
              <td class="px-6 py-4 font-semibold text-indigo-600">
                <%= number_to_currency(invoice.amount, unit: "Rp. ", separator: ",", delimiter: ".") %>
              </td>
              <td class="px-6 py-4">
                <span class="inline-block px-2 py-1 text-sm rounded
                  <%= invoice.paid? ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700' %>">
                  <%= invoice.status.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 space-x-2">
                <%= link_to "Detail", admin_invoice_path(invoice), class: "text-blue-600 hover:underline" %>
                <%= link_to "Edit", edit_admin_invoice_path(invoice), class: "text-yellow-600 hover:underline" %>
                <%= button_to "Hapus", admin_invoice_path(invoice), method: :delete, data: { confirm: "Yakin ingin menghapus invoice ini?" }, class: "text-red-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

