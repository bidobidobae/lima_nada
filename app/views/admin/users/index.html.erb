<% content_for :title, "Daftar Guru" %>

<div class="max-w-6xl mx-auto mt-10 px-4">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Daftar Guru</h1>
    <%= link_to "Tambah Guru", new_admin_user_path, class: "bg-[#012f2f] hover:bg-[#024646] text-white font-semibold p-2 rounded-lg transition-colors duration-200" %>
  </div>

  <% if @users.empty? %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded">
      Belum ada pengguna.
    </div>
  <% else %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border border-gray-200 shadow-sm rounded-lg">
        <thead class="bg-gray-100 text-left text-gray-600 uppercase text-sm">
          <tr>
            <th class="px-6 py-3 border-b">Nama</th>
            <th class="px-6 py-3 border-b">Email</th>
            <th class="px-6 py-3 border-b">Role</th>
            <th class="px-6 py-3 border-b">No. Telepon</th>
            <th class="px-6 py-3 border-b">Aksi</th>
          </tr>
        </thead>
        <tbody class="text-gray-700 divide-y divide-gray-200">
          <% @users.each do |user| %>
            <tr>
              <td class="px-6 py-4"><%= user.name.presence || "-" %></td>
              <td class="px-6 py-4"><%= user.email %></td>
              <td class="px-6 py-4 capitalize"><%= user.role %></td>
              <td class="px-6 py-4"><%= user.phone_number.presence || "-" %></td>
              <td class="px-6 py-4 space-x-2">
                <%= link_to "Edit", edit_admin_user_path(user), class: "text-yellow-600 hover:underline" %>
                <%= button_to "Hapus", admin_user_path(user), method: :delete, data: { confirm: "Yakin ingin menghapus pengguna ini?" }, class: "text-red-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

