<%= form_with model: [:admin, @user], local: true, class: "max-w-xl mx-auto bg-white p-8 rounded shadow" do |f| %>
  <% if @user.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 text-red-700 rounded">
      <h2 class="font-semibold mb-2">Terdapat <%= pluralize(@user.errors.count, "error") %>:</h2>
      <ul class="list-disc list-inside">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, class: "mt-1 block w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, class: "mt-1 block w-full border rounded p-2", autocomplete: "new-password" %>
    <% if action_name == "edit" %>
      <p class="text-sm text-gray-500 mt-1">Biarkan kosong jika tidak ingin mengganti password</p>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, class: "mt-1 block w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :role, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "mt-1 block w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :address, class: "mt-1 block w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :phone_number, class: "mt-1 block w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :bank_account, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :bank_account, class: "mt-1 block w-full border rounded p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :social_media, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :social_media, class: "mt-1 block w-full border rounded p-2" %>
  </div>

  <div class="mt-6">
    <%= f.submit class: "w-full bg-[#012f2f] hover:bg-[#024646] text-white font-semibold py-2 rounded-lg transition-colors duration-200" %>
  </div>
<% end %>

