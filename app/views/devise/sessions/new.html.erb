<div class="min-h-screen flex items-center justify-center bg-[#f9fafb]">
  <div class="w-full max-w-md bg-white shadow-lg rounded-2xl p-8 mx-4 my-10">
    <div class="text-center mb-6">
      <img src="https://via.placeholder.com/80x80?text=LN" alt="Logo" class="w-20 h-20 mx-auto rounded-full border-4 border-orange-400 shadow">
      <h2 class="mt-4 text-2xl font-bold text-[#012f2f]">Masuk ke Akun</h2>
      <p class="text-sm text-gray-600">Selamat datang kembali di Yayasan Lima Nada</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <div>
        <%= f.label :email, "Alamat Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "mt-1 w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-orange-400 focus:border-orange-400 outline-none" %>
      </div>

      <div>
        <%= f.label :password, "Kata Sandi", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "mt-1 w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-orange-400 focus:border-orange-400 outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 rounded border-gray-300 text-orange-500 focus:ring-orange-400" %>
          <%= f.label :remember_me, "Ingat Saya", class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Masuk", class: "w-full bg-[#012f2f] hover:bg-[#024646] text-white font-semibold py-2 rounded-lg transition-colors duration-200" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      Belum punya akun?
      <%= link_to "Daftar di sini", new_user_registration_path, class: "text-orange-500 hover:text-orange-400 font-medium" %>
    </div>

    <div class="mt-3 text-center text-sm">
      <%= link_to "Lupa kata sandi?", new_password_path(resource_name), class: "text-gray-500 hover:text-orange-400 transition" %>
    </div>
  </div>
</div>
