<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Lima Nada" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <!-- app/views/shared/_navbar.html.erb -->
    <header class="bg-[#012f2f] text-white shadow-md sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <!-- Logo dan Nama -->
          <div class="flex items-center space-x-3">
            <img src="https://via.placeholder.com/40x40?text=LN" alt="Logo" class="w-10 h-10 rounded-full border-2 border-orange-400 shadow">
            <span class="text-lg sm:text-xl font-bold tracking-wide text-orange-200">Yayasan Lima Nada</span>
          </div>

          <!-- Hamburger (mobile) -->
          <div class="-mr-2 flex md:hidden">
            <button id="navbar-toggle" type="button" class="text-white hover:text-orange-400 focus:outline-none">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path id="navbar-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>

          <!-- Menu Desktop -->
          <nav class="hidden md:flex space-x-6 items-center font-medium text-sm tracking-wide">
            <%= link_to "Tentang", "#tentang", class: "hover:text-orange-300 transition" %>
            <%= link_to "Program", "#program", class: "hover:text-orange-300 transition" %>
            <%= link_to "Galeri", "#galeri", class: "hover:text-orange-300 transition" %>
            <%= link_to "Event", "#event", class: "hover:text-orange-300 transition" %>
            <%= link_to "Kontak", "#kontak", class: "hover:text-orange-300 transition" %>

            <% if user_signed_in? && current_user.admin? %>
                <%= link_to "Murid", students_path, class: "hover:text-orange-300 transition" %>
                <%= link_to "Guru", admin_users_path, class: "hover:text-orange-300 transition" %>
                <%= link_to "Invoices", admin_invoices_path, class: "hover:text-orange-300 transition" %>
                 <%= link_to "Salary", admin_salaries_path, class: "hover:text-orange-300 transition" %>
                <%= link_to "Pembukuan", admin_bookkeepings_path, class: "hover:text-orange-300 transition" %>
            <% end %>
            <% if user_signed_in? %>
              <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "ml-2 bg-red-500 hover:bg-red-400 text-white px-3 py-1 rounded transition text-sm" %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "ml-2 bg-orange-500 hover:bg-orange-400 text-white px-3 py-1 rounded transition text-sm" %>
            <% end %>
          </nav>
        </div>
      </div>

      <!-- Menu Mobile -->
      <div id="mobile-menu" class="hidden md:hidden px-4 pb-4 flex flex-col space-y-2 text-white text-sm font-medium bg-[#012f2f]">
        <%= link_to "Tentang", "#tentang", class: "hover:text-orange-300 transition" %>
        <%= link_to "Program", "#program", class: "hover:text-orange-300 transition" %>
        <%= link_to "Galeri", "#galeri", class: "hover:text-orange-300 transition" %>
        <%= link_to "Event", "#event", class: "hover:text-orange-300 transition" %>
        <%= link_to "Pendaftaran", "#pendaftaran", class: "hover:text-orange-300 transition" %>
        <%= link_to "Kontak", "#kontak", class: "hover:text-orange-300 transition" %>
        <% if user_signed_in? && current_user.admin? %>
            <%= link_to "Guru", admin_users_path, class: "hover:text-orange-300 transition" %>
            <%= link_to "Invoices", admin_invoices_path, class: "hover:text-orange-300 transition" %>
            <%= link_to "Salary", admin_salaries_path, class: "hover:text-orange-300 transition" %>
            <%= link_to "Pembukuan", admin_bookkeepings_path, class: "hover:text-orange-300 transition" %>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete,
            class: "bg-red-500 hover:bg-red-400 text-white px-3 py-1 rounded transition" %>
        <% else %>
          <%= link_to "Login", new_user_session_path,
            class: "bg-orange-500 hover:bg-orange-400 text-white px-3 py-1 rounded transition" %>
        <% end %>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
